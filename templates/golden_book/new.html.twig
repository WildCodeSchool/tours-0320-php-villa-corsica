{% extends 'base.html.twig' %}

{% block title %}Ajouter un commentaire{% endblock %}

{% block content %}

<div class="titre">
<h1>partagez-nous votre sentiment</h1>
</div>
<div class=" goldForm" >
{{ form_start(form) }}
<div class="row gold">
    <div class="col">{{ form_row(form.name) }}</div>
    <div class="col">{{ form_row(form.departureDate) }}</div>
</div>
<div class="row gold">
    <div class="col">{{ form_row(form.commentary) }}</div>
    <div class="col">{{ form_row(form.villa) }}</div>
</div>
{{ form_rest(form) }}
 <button class="ajouter btn btn-warning btn-lg">{{ button_label|default('Ajouter') }}</button>
<a  class="ajouter btn btn-warning btn-lg" href="{{ path('golden_book_index') }}">Retour</a>
{{ form_end(form) }}
</div>

{% endblock %}
