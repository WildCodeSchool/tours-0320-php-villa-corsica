{% extends 'base.html.twig' %}

{% block title %}Livre d'or{% endblock %}

{% block content %}
    <div class="goldenbook_container">
        {% for golden_book in golden_books %}
            <div class="commentary">
                <h2>" {{ golden_book.commentary }} "</h2>
                <h2>{{ golden_book.villa.name }}</h2>
                <p>{{ golden_book.name }} le : {{ golden_book.departureDate|date('d-m-Y')}}</p>
                {% if is_granted('ROLE_ADMIN') %}
                    {{ include('golden_book/_delete_form.html.twig') }}
                {% endif %}
            </div>
        {% else %}
            <h6>Il n'y a pas de commentaire </h6>
        {% endfor %}
        <div class="ajouter_btn">
            <a class="btn btn-info btn-lg" href="{{ path('golden_book_new') }}">Partager votre exp√©rience</a>
        </div>
    </div>
{% endblock %}
