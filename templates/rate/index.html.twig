{% extends 'base.html.twig' %}

{% block title %}Rate index{% endblock %}

{% block content %}
    <h1>Tarifs</h1>

    <table class="table">
        <thead>
            <tr>
                <th>FirstPeriod</th>
                <th>SecondPeriod</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rate in rates %}
            <tr>
                <td>{{ rate.firstPeriod ? rate.firstPeriod|date('Y-m-d') : '' }}</td>
                <td>{{ rate.secondPeriod ? rate.secondPeriod|date('Y-m-d') : '' }}</td>
                <td>{{ rate.price }}</td>
                <td>
                      <div class="btn_villa">
                    <a class="btn btn-success btn-lg"  href="{{ path('rate_edit', {'id': rate.id}) }}">Modifier</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
