{% extends 'base.html.twig' %}

{% block title %}Liste des photos{% endblock %}

{% block content %}
    <h1 id="pictures_list">Liste des photos</h1>
    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th><h3>Photos</h3></th>
            <th><h3>Villa</h3></th>
            <th><h3>Action</h3></th>
        </tr>
        </thead>
        <tbody>
        {% for picture in pictures %}
            <tr>
                <td>
                    <img src="{{ picture.photo }}" width="150px"; height="150px";/>
                </td>
                <td>
                    <h4>{{ picture.villa.name }}</h4>
                </td>
                <td>
                  {{ include('picture/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td>Aucune photo(s)</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
