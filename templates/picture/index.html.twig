{% extends 'base.html.twig' %}

{% block title %}Liste des photos{% endblock %}

{% block content %}
    <h1>Liste des photos</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Photo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for picture in pictures %}
            <tr>
                <td>{{ picture.id }}</td>
                <td>{{ picture.photo }}</td>
                <td>
                    <a class="btn btn-success btn-lg" href="{{ path('picture_show', {'id': picture.id}) }}">show</a>
                 
                  {{ include('picture/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
